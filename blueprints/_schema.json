{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decantr Blueprint",
  "type": "object",
  "required": ["id", "name", "category", "description", "kits", "layout", "routes", "pages"],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z][a-z0-9-]*$" },
    "name": { "type": "string" },
    "category": { "type": "string", "enum": ["dashboard", "content", "marketing"] },
    "description": { "type": "string" },
    "kits": {
      "type": "array",
      "items": { "type": "string", "enum": ["dashboard", "auth", "content"] },
      "minItems": 1
    },
    "layout": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["sidebar", "topnav", "minimal", "landing"] },
        "sidebar": {
          "type": "object",
          "properties": {
            "position": { "type": "string", "enum": ["left", "right"], "default": "left" },
            "collapsible": { "type": "boolean", "default": false }
          }
        },
        "header": {
          "type": "object",
          "properties": {
            "show": { "type": "boolean", "default": true },
            "search": { "type": "boolean", "default": false },
            "notifications": { "type": "boolean", "default": false },
            "userMenu": { "type": "boolean", "default": false }
          }
        }
      }
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "page", "label"],
        "properties": {
          "path": { "type": "string" },
          "page": { "type": "string" },
          "label": { "type": "string" },
          "icon": { "type": "string" }
        }
      },
      "minItems": 1
    },
    "pages": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["title", "sections"],
        "properties": {
          "title": { "type": "string" },
          "sections": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": { "type": "string" },
                "props": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "mockData": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "values": { "type": "array" }
              }
            }
          },
          "count": { "type": "integer", "minimum": 1 }
        }
      }
    }
  },
  "additionalProperties": false
}