{
  "id": "documentation",
  "name": "Documentation",
  "category": "content",
  "description": "Sidebar navigation, markdown-style pages, search, and table of contents.",
  "kits": ["content"],
  "layout": {
    "type": "sidebar",
    "sidebar": { "position": "left", "collapsible": false },
    "header": { "show": true, "search": true, "notifications": false, "userMenu": false }
  },
  "routes": [
    { "path": "/", "page": "getting-started", "label": "Getting Started", "icon": "home" },
    { "path": "/installation", "page": "installation", "label": "Installation", "icon": "package" },
    { "path": "/components", "page": "components", "label": "Components", "icon": "code" },
    { "path": "/api", "page": "api", "label": "API Reference", "icon": "table" }
