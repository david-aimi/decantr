  "pages": {
    "getting-started": {
      "title": "Getting Started",
      "sections": [
        { "type": "ArticleLayout", "props": { "toc": true, "content": "getting-started" } }
      ]
    },
    "installation": {
      "title": "Installation",
      "sections": [
        { "type": "ArticleLayout", "props": { "toc": true, "content": "installation" } }
      ]
    },
    "components": {
      "title": "Components",
      "sections": [
        { "type": "ArticleLayout", "props": { "toc": true, "content": "components" } }
      ]
    },
    "api": {
      "title": "API Reference",
      "sections": [
        { "type": "ArticleLayout", "props": { "toc": true, "content": "api" } }
      ]
    }
  },
  "mockData": {
    "toc": {
      "fields": [
        { "name": "id", "type": "string", "values": ["overview", "quick-start", "prerequisites", "installation-steps", "configuration"] },
        { "name": "text", "type": "string", "values": ["Overview", "Quick Start", "Prerequisites", "Installation Steps", "Configuration"] },
        { "name": "level", "type": "number", "values": [2, 2, 3, 3, 2] }
      ],
      "count": 5
    }
  }
