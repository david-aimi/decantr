{
  "id": "daily-planner",
  "name": "Daily Planner",
  "category": "dashboard",
  "description": "Task lists, calendar view, habits tracker, and productivity stats.",
  "kits": ["dashboard"],
  "layout": {
    "type": "sidebar",
    "sidebar": { "position": "left", "collapsible": false },
    "header": { "show": true, "search": false, "notifications": true, "userMenu": true }
  },
  "routes": [
    { "path": "/", "page": "today", "label": "Today", "icon": "home" },
    { "path": "/tasks", "page": "tasks", "label": "All Tasks", "icon": "check" },
    { "path": "/habits", "page": "habits", "label": "Habits", "icon": "activity" },
    { "path": "/settings", "page": "settings", "label": "Settings", "icon": "settings" }
  ],
  "pages": {
    "today": {
      "title": "Today",
      "sections": [
        { "type": "StatsGrid", "props": { "columns": 3, "items": [
          { "title": "Tasks Due", "value": "8", "change": "", "icon": "check" },
          { "title": "Completed", "value": "5", "change": "+2 today", "icon": "trending-up" },
          { "title": "Streak", "value": "12 days", "change": "", "icon": "activity" }
        ]}},
        { "type": "DataTable", "props": { "searchable": false, "columns": [
          { "key": "task", "label": "Task" },
          { "key": "priority", "label": "Priority" },
          { "key": "due", "label": "Due" },
          { "key": "status", "label": "Status" }
        ]}},
        { "type": "ActivityFeed", "props": { "title": "Completed Today", "count": 5 } }
      ]
    },
    "tasks": {
      "title": "All Tasks",
      "sections": [
        { "type": "DataTable", "props": { "searchable": true, "columns": [
          { "key": "task", "label": "Task" },
          { "key": "category", "label": "Category" },
          { "key": "priority", "label": "Priority" },
          { "key": "due", "label": "Due Date" },
          { "key": "status", "label": "Status" }
        ]}}
      ]
    },
    "habits": {
      "title": "Habits",
      "sections": [
        { "type": "StatsGrid", "props": { "columns": 4, "items": [
          { "title": "Active Habits", "value": "6", "change": "", "icon": "activity" },
          { "title": "Completion Rate", "value": "84%", "change": "+5%", "icon": "trending-up" },
          { "title": "Best Streak", "value": "21 days", "change": "", "icon": "star" },
          { "title": "This Week", "value": "28/42", "change": "", "icon": "check" }
        ]}},
        { "type": "DataTable", "props": { "searchable": false, "columns": [
          { "key": "habit", "label": "Habit" },
          { "key": "frequency", "label": "Frequency" },
          { "key": "streak", "label": "Streak" },
          { "key": "completion", "label": "Completion" }
        ]}}
      ]
    },
    "settings": {
      "title": "Settings",
      "sections": []
    }
  },
  "mockData": {
    "today": {
      "fields": [
        { "name": "task", "type": "string", "values": ["Review pull requests", "Team standup", "Write documentation", "Deploy v2.1", "Update dependencies"] },
        { "name": "priority", "type": "status", "values": ["High", "Medium", "Low", "High", "Low"] },
        { "name": "due", "type": "string", "values": ["9:00 AM", "10:00 AM", "12:00 PM", "3:00 PM", "5:00 PM"] },
        { "name": "status", "type": "status", "values": ["Done", "Done", "In Progress", "Pending", "Pending"] }
      ],
      "count": 5
    },
    "habits": {
      "fields": [
        { "name": "habit", "type": "string", "values": ["Morning Exercise", "Read 30 min", "Meditation", "Journal", "No Social Media", "Code Review"] },
        { "name": "frequency", "type": "string", "values": ["Daily", "Daily", "Daily", "Daily", "Weekdays", "Weekdays"] },
        { "name": "streak", "type": "string", "values": ["12 days", "8 days", "21 days", "5 days", "3 days", "14 days"] },
        { "name": "completion", "type": "string", "values": ["92%", "76%", "95%", "68%", "80%", "88%"] }
      ],
      "count": 6
    }
  }
}