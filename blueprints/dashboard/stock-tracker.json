{
  "id": "stock-tracker",
  "name": "Stock Tracker",
  "category": "dashboard",
  "description": "Portfolio overview, watchlist, price charts, and trade history.",
  "kits": ["dashboard"],
  "layout": {
    "type": "sidebar",
    "sidebar": { "position": "left", "collapsible": true },
    "header": { "show": true, "search": true, "notifications": true, "userMenu": true }
  },
  "routes": [
    { "path": "/", "page": "portfolio", "label": "Portfolio", "icon": "dollar" },
    { "path": "/watchlist", "page": "watchlist", "label": "Watchlist", "icon": "star" },
    { "path": "/trades", "page": "trades", "label": "Trade History", "icon": "table" },
    { "path": "/settings", "page": "settings", "label": "Settings", "icon": "settings" }
  ],
  "pages": {
    "portfolio": {
      "title": "Portfolio",
      "sections": [
        { "type": "StatsGrid", "props": { "columns": 4, "items": [
          { "title": "Total Value", "value": "$127,450", "change": "+3.2%", "icon": "dollar" },
          { "title": "Day Change", "value": "+$1,245", "change": "+0.98%", "icon": "trending-up" },
          { "title": "Total Gain", "value": "+$18,320", "change": "+16.8%", "icon": "chart" },
          { "title": "Positions", "value": "12", "change": "", "icon": "activity" }
        ]}},
        { "type": "ChartPlaceholder", "props": { "title": "Portfolio Performance" } },
        { "type": "DataTable", "props": { "searchable": false, "columns": [
          { "key": "symbol", "label": "Symbol" },
          { "key": "shares", "label": "Shares" },
          { "key": "price", "label": "Price" },
          { "key": "change", "label": "Change" },
          { "key": "value", "label": "Value" }
        ]}}
      ]
    },
    "watchlist": {
      "title": "Watchlist",
      "sections": [
        { "type": "DataTable", "props": { "searchable": true, "columns": [
          { "key": "symbol", "label": "Symbol" },
          { "key": "price", "label": "Price" },
          { "key": "change", "label": "Change" },
          { "key": "volume", "label": "Volume" },
          { "key": "marketCap", "label": "Market Cap" }
        ]}}
      ]
    },
    "trades": {
      "title": "Trade History",
      "sections": [
        { "type": "DataTable", "props": { "searchable": true, "columns": [
          { "key": "date", "label": "Date" },
          { "key": "symbol", "label": "Symbol" },
          { "key": "type", "label": "Type" },
          { "key": "shares", "label": "Shares" },
          { "key": "price", "label": "Price" },
          { "key": "total", "label": "Total" }
        ]}}
      ]
    },
    "settings": {
      "title": "Settings",
      "sections": []
    }
  },
  "mockData": {
    "portfolio": {
      "fields": [
        { "name": "symbol", "type": "string", "values": ["AAPL", "GOOGL", "MSFT", "TSLA", "AMZN"] },
