        { "name": "price", "type": "currency", "values": ["$178.50", "$142.30", "$415.20", "$245.80", "$185.60"] },
        { "name": "change", "type": "percent", "values": ["+1.2%", "-0.8%", "+2.1%", "+3.5%", "-0.3%"] },
        { "name": "value", "type": "currency", "values": ["$8,925", "$2,846", "$14,532", "$3,687", "$4,640"] }
