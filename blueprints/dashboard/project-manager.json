{
  "id": "project-manager",
  "name": "Project Manager",
  "category": "dashboard",
  "description": "Project boards, team members, milestones, and progress tracking.",
  "kits": ["dashboard"],
  "layout": {
    "type": "sidebar",
    "sidebar": { "position": "left", "collapsible": true },
    "header": { "show": true, "search": true, "notifications": true, "userMenu": true }
  },
  "routes": [
    { "path": "/", "page": "overview", "label": "Overview", "icon": "home" },
    { "path": "/projects", "page": "projects", "label": "Projects", "icon": "package" },
    { "path": "/team", "page": "team", "label": "Team", "icon": "users" },
    { "path": "/settings", "page": "settings", "label": "Settings", "icon": "settings" }
  ],
  "pages": {
    "overview": {
      "title": "Overview",
      "sections": [
        { "type": "StatsGrid", "props": { "columns": 4, "items": [
          { "title": "Active Projects", "value": "7", "change": "+2", "icon": "package" },
          { "title": "Tasks Due", "value": "23", "change": "-5", "icon": "check" },
          { "title": "Team Members", "value": "12", "change": "+1", "icon": "users" },
          { "title": "Completion", "value": "68%", "change": "+8%", "icon": "trending-up" }
        ]}},
        { "type": "ChartPlaceholder", "props": { "title": "Project Timeline" } },
        { "type": "ActivityFeed", "props": { "title": "Recent Updates", "count": 5 } }
      ]
    },
    "projects": {
      "title": "Projects",
      "sections": [
        { "type": "DataTable", "props": { "searchable": true, "columns": [
          { "key": "name", "label": "Project" },
          { "key": "lead", "label": "Lead" },
          { "key": "status", "label": "Status" },
          { "key": "progress", "label": "Progress" },
          { "key": "deadline", "label": "Deadline" }
        ]}}
      ]
    },
    "team": {
      "title": "Team",
      "sections": [
        { "type": "DataTable", "props": { "searchable": true, "columns": [
          { "key": "name", "label": "Name" },
          { "key": "role", "label": "Role" },
          { "key": "projects", "label": "Projects" },
          { "key": "tasks", "label": "Open Tasks" },
          { "key": "status", "label": "Status" }
        ]}}
      ]
    },
    "settings": {
      "title": "Settings",
      "sections": []
    }
  },
  "mockData": {
    "projects": {
      "fields": [
        { "name": "name", "type": "string", "values": ["Website Redesign", "Mobile App v2", "API Migration", "Auth System", "Dashboard UI"] },
        { "name": "lead", "type": "string", "values": ["Alice Chen", "Bob Smith", "Carol Wu", "Dave Kim", "Eve Park"] },
        { "name": "status", "type": "status", "values": ["Active", "Active", "In Review", "Planning", "Active"] },
        { "name": "progress", "type": "string", "values": ["72%", "45%", "89%", "15%", "60%"] },
        { "name": "deadline", "type": "date", "values": ["2026-03-15", "2026-04-01", "2026-02-28", "2026-05-10", "2026-03-20"] }
      ],
      "count": 5
    },
    "team": {
      "fields": [
        { "name": "name", "type": "string", "values": ["Alice Chen", "Bob Smith", "Carol Wu", "Dave Kim", "Eve Park"] },
        { "name": "role", "type": "string", "values": ["Frontend Lead", "Backend Dev", "Full Stack", "DevOps", "Designer"] },
        { "name": "projects", "type": "number", "values": [3, 2, 2, 4, 3] },
        { "name": "tasks", "type": "number", "values": [5, 8, 3, 6, 4] },
        { "name": "status", "type": "status", "values": ["Active", "Active", "On Leave", "Active", "Active"] }
      ],
      "count": 5
    }
  }
}